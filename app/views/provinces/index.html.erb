<p id="notice"><%= notice %></p>

<h1>Provinces</h1>

<br>

<%= link_to 'New Province', new_province_path %>

<br>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Name</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provinces.each_with_index do |province,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= province.name %></td>
        <td><%= province.remark %></td>
        <td><%= link_to 'Show', province %></td>
        <td><%= link_to 'Edit', edit_province_path(province) %></td>
        <td><%= link_to 'Remove', province, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

